  authorId      String @db.ObjectId
  author        User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  type          PostType
  tags          String[]
  
  thumbnail     Image
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @default(now()) @map(name: "updated_at")

  Bookmark      Bookmark[]
